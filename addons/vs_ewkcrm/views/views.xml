<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="crm_lead_opportunity_kanban_custom" model="ir.ui.view">
      <field name="name">crm.opportunity.inherited.kanban</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.quick_create_opportunity_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='phone']" position="attributes">
          <attribute name="required">1</attribute>
        </xpath>
      </field>
    </record>

    <record id="base_view_partner_form" model="ir.ui.view">
      <field name="name">res.partner.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="priority">1000</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='phone']" position="attributes">
          <attribute name="required">1</attribute>
          <attribute name="string">Primary Phone</attribute>
        </xpath>
        <xpath expr="//field[@name='website']" position="before">
          <field name="whatsapp" />
        </xpath>
      </field>
    </record>

    <record id="view_form_crm_lead_custom" model="ir.ui.view">
      <field name="name">view.form.crm.lead.custom</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_lead_view_form" />
      <field name="priority">1000</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='tag_ids']" position="after">
          <field name="verified" />
        </xpath>
        <xpath expr="//group[@name='lead_priority']//field[@name='tag_ids']" position="after">
          <field name="verified" />
        </xpath>
<!--        <xpath expr="//field[@name='source_id']" position="attributes">-->
<!--          <attribute name="required">1</attribute>-->
<!--        </xpath>-->
        <xpath expr="//field[@name='phone']" position="attributes">
          <attribute name="attrs">{'readonly': [('verified', '==', True)]}</attribute>
        </xpath>
      </field>
    </record>

    <record id="view_form_crm_stage_custom" model="ir.ui.view">
      <field name="name">view.form.crm.stage.custom</field>
      <field name="model">crm.stage</field>
      <field name="inherit_id" ref="crm.crm_stage_form" />
      <field name="priority">1000</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='team_count']" position="before">
          <group>
            <field name="probability" widget='percentage' />
            <field name="default_activity_id" />
            <field name="due_within" />
          </group>
        </xpath>
      </field>
    </record>

  </data>
</odoo>