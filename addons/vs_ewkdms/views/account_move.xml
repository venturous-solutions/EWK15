<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- modify account.move.line in account.move view-->
    <record id="view_account_invoice_account_move_line" model="ir.ui.view">
      <field name="name">tree.account.move.account.move.line</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form" />
      <field name="arch" type="xml">
        <xpath expr="//tree//field[@name='product_id']" position="after">
          <field name="dog_id" readonly="1"/>
        </xpath>
      </field>
    </record>

    <!-- modify account.move.line tree view-->
    <record id="view_tree_account_move_line" model="ir.ui.view">
      <field name="name">tree.account.move.line</field>
      <field name="model">account.move.line</field>
      <field name="inherit_id" ref="account.view_move_line_tree" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="dog_id" optional="show"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>