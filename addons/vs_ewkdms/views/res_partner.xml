<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_res_partner_dog_pag" model="ir.ui.view">
      <field name="name">res.partner.dog.page</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="priority" eval="100" />
      <field name="groups_id" eval="[(4, ref('vs_ewkdms.group_dms_user')), (4, ref('vs_ewkdms.group_dms_administrator'))]" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='contact_addresses']" position="after">
          <page string="Dogs" name="dog_page">
            <field name="dog_ids" mode="kanban" context="{'default_parent_id': active_id, 'default_owner_id': active_id}">
              <kanban>
                <field name="id" />
                <field name="breed" />
                <field name="color" />
                <field name="birth_date" />
                <field name="name" />
                <field name="image" />
                <templates>
                  <t t-name="kanban-box">
                    <div t-att-class="color + ' oe_kanban_global_click'">
                      <div class="o_kanban_image">
                        <img alt="Dog image" t-if="record.image.raw_value" t-att-src="kanban_image('dog.dog', 'image', record.id.raw_value)" />
                        <t t-if="!record.image.raw_value">
                          <img alt="Image Missinh" t-att-src='_s + "/base/static/img/truck.png"' />
                        </t>
                      </div>
                      <div class="oe_kanban_details">
                        <field name="name" />
                        <div t-if="record.breed.raw_value">
                          <field name="breed" />
                        </div>
                      </div>
                    </div>
                  </t>
                </templates>
              </kanban>
              <form string="Dog">
                <sheet>
                  <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}" />
                  <div class="oe_title">
                    <label class="oe_edit_only" for="name" string="Dog Name" />
                    <h1>
                      <field name="name" placeholder="Dog Name" />
                    </h1>
                  </div>
                  <group>
                    <group>
                      <field name="owner_id" />
                      <field name="breed" />
                      <field name="gender" />
                      <field name="color" />
                      <field name="people_beh" />
                      <field name="birth_date" />
                      <field name="estimated" />
                      <field name="food_type" />
                    </group>
                  </group>
                </sheet>
              </form>
            </field>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>